{% extends "base_semnaticui.tmpl" %}
{% block content %}
    
    <div class="ui grid">
        <div class="eight wide column" >
          <img src={{ static_url("images/bug.png")}} width="75%"/>
        </div>
        
        <div class="six wide column">
            
            <div class="ui warning message">
                <h1 class="alert-heading">Oh no! An Error occured. </h1> 
            </div>
            <p class="lead">    
                Sorry, this should not have happended!
            </p>
            
            <p>
                <table class="table">
                    <tr>
                        <td><b>Status:</b></td><td> {{status}} </td>
                    </tr>
                    <tr>
                        <td><b>Message:</b></td><td> {{message}} </td>
                    </tr>
                    <tr>
                        <td><b>Data:</b></td><td> {{data}} </td>
                    </tr>
                    <tr>
                        <td><b>URI:</b></td><td> {{request.path}} </td>
                    </tr>
                    <tr>
                        <td><b>Request:</b></td><td> {{request}} </td>
                    </tr>
                </table>
        </div>
        <div class="two wide column">
            &nbsp;
        </div>
{% end %}